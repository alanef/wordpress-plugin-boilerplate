{
    "name": "yourname/plugin-name",
    "description": "WordPress plugin boilerplate",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "email@example.com",
            "homepage": "https://example.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs",
        "lint:fix": "./vendor/bin/phpcbf",
        "phpcs-security": "./vendor/bin/phpcs -p --standard=phpcs_sec.xml",
        "phpcompat": "./vendor/bin/phpcs -p --standard=PHPCompatibilityWP --ignore=*/vendor/* --extensions=php --runtime-set testVersion 7.4- plugin-name",
        "test": "./vendor/bin/phpunit",
        "test:unit": "./vendor/bin/phpunit --testsuite unit",
        "test:integration": "./vendor/bin/phpunit --testsuite integration",
        "make-pot": "mkdir -p plugin-name/languages && wp i18n make-pot ./plugin-name ./plugin-name/languages/plugin-name.pot --skip-audit --exclude='vendor,node_modules,tests,bin'",
        "build": "composer run-script make-pot && rm -rf dist && mkdir -p dist && wp dist-archive ./plugin-name ./dist/plugin-name.zip --plugin-dirname=plugin-name"
    },
    "scripts-descriptions": {
        "lint": "Run PHP_CodeSniffer to detect coding standard violations",
        "lint:fix": "Run PHP Code Beautifier to fix coding standard violations",
        "test": "Run all PHPUnit tests",
        "test:unit": "Run PHPUnit unit tests only",
        "test:integration": "Run PHPUnit integration tests only",
        "make-pot": "Generate POT file for translations",
        "build": "Build the plugin with language files and create distribution archive"
    }
}